<h1>Recipes of <%= @keyword %></h1>
<% if @recipes.nil? || @recipes.empty? %>
  <p>Not found recipes for <%= @keyword %></p>
<% else %>
  <table>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Social Rank</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to image_tag(recipe["image_url"], width: 100, height: 100), recipe["f2f_url"] %></td>
        <td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"] %></td>
        <td><%= recipe["social_rank"] %></td>
      </tr>
    <% end %>
  </table>
<% end %>